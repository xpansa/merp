    <record model="ir.rule" id="stock_scrap_rule_stock_manager">
        <field name="name">See All Scrap Orders</field>
        <field name="model_id" ref="stock.model_stock_scrap"/>
        <field name="groups" eval="[(4, ref('stock.group_stock_manager'))]"/>
