<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <!-- Update User form -->
    <record model="ir.ui.view" id="res_user_form">
        <field name="name">Users Preferences</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//notebook/page[@name='references']" position="after">
                    <page string="Ventor Preferences">
                        <group name="merp" col="8">
                            <label for="default_inventory_location" colspan="3"/>
                            <field name="default_inventory_location" nolabel="1" colspan="5"/>
                            <label for="default_warehouse" colspan="3"/>
                            <field name="default_warehouse" nolabel="1" colspan="5"/>
                            <label for="stock_location_id" colspan="3"/>
                            <field name="stock_location_id" nolabel="1" colspan="5"/>
                            <label for="allow_to_change_force_source_location" colspan="3"/>
                            <field name="allow_to_change_force_source_location" nolabel="1" colspan="5"/>
                            <label for="custom_package_name" colspan="3"/>
                            <field name="custom_package_name" nolabel="1" colspan="5"/>
                        </group>
                        <group>
                            <field name="ventor_global_settings"
                                   style="overflow-y: scroll; resize: none; height: 120px; width: 100%%"
                                   groups="base.group_no_one"/>
                            <field name="ventor_user_settings"
                                   style="overflow-y: scroll; resize: none; height: 120px; width: 100%%"
                                   groups="base.group_no_one"/>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//page[@name='access_rights']//group" position="after">
                    <group string="Multi Warehouses">
                        <field name="allowed_warehouse_ids"  widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                </xpath>
            </data>
        </field>
    </record>

</odoo>
